generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  schemas  = ["public", "cor"]
}

model SystemHealth {
  id       Int     @id @default(autoincrement())
  isHealth Boolean @default(true)

  @@map("system_health") 
  @@schema("cor")      
}

model SuccessMessage {
  id         Int      @id @default(autoincrement())
  key        String   @unique
  tr         String
  en         String
  statusCode Int      @default(200)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@map("success_messages")
  @@schema("cor")
}

model ErrorMessage {
  id              Int      @id @default(autoincrement())
  key             String   @unique
  tr             String
  en             String
  friendlyMessage String?
  description    String?
  isBusinessError Boolean  @default(false)
  statusCode     Int
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@map("error_messages")
  @@schema("cor")
}

